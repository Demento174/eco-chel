{#                                    <div class="text_center">#}
{#                                        Прикрепите реквизиты организации#}
{#                                        для выставления счета#}
{#                                    </div>#}
{#                                </div>#}
{#                                <div class="text_center text_decoration text_primary">#}
{#                                    <a href="#">заполнить вручную</a>#}
{#                                </div>#}

                                <button type="submit" class="btn btn_warn btn_block" id="create_order">
                                    отправить заявку
                                </button>
                            </form>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>
</main>