<div class="search-bar">
    <div class="container">
        <form action="/" method="get" class="search-bar__form">
            <div class="row align-items-center">
                <div class="col-lg-3 col-12">
                    <h4 class="heading heading_md">ПОИСК автозапчасти</h4>
                </div>
                <div class="col-lg-4 col-md-5 col-sm-12">
                    <input type="text" name="title" class="input" id="search_input" placeholder="Введите название запчасти" value="{{ search }}">
                </div>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <select  name="brand" class="input" placeholder="Бренд" value="{{ brand }}">
                        <option value="0">Бренды</option>
                        {% for item in marks  %}
                            <option value="{{ item.name }}">{{ item.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-12 flex-grow-0 wrap-btn">
                    <button type="submit" class="btn btn_warn btn_search" id="search">найти
                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="26" height="28" viewBox="0 0 26 28" class="icon icon-search">
                            <path d="M18 13c0-3.859-3.141-7-7-7s-7 3.141-7 7 3.141 7 7 7 7-3.141 7-7zM26 26c0 1.094-0.906 2-2 2-0.531 0-1.047-0.219-1.406-0.594l-5.359-5.344c-1.828 1.266-4.016 1.937-6.234 1.937-6.078 0-11-4.922-11-11s4.922-11 11-11 11 4.922 11 11c0 2.219-0.672 4.406-1.937 6.234l5.359 5.359c0.359 0.359 0.578 0.875 0.578 1.406z"></path>
                        </svg>
                    </button>
                </div>
            </div>
            <ul class="search_response">
                <li class="close">x</li>
            </ul>
        </form>
    </div>
</div>